<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
        }
        nav {
            text-align: center;
            padding: 10px;
        }
        nav a {
            margin-right: 10px;
            color: #333;
            text-decoration: none;
        }
        .container {
            margin: 20px;
        }
        .history-item {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .history-item h3 {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>History</h1>
    </header>
    <nav>
        <a href="/recipe-history">Recipe History</a>
        <a href="/currency-conversion-history">Currency Conversion History</a>
        <a href="/index">Go back</a>
    </nav>
    <div class="container">
        <% if (page === 'recipe-history') { %>
            <h2>Recipe History</h2>
            <% recipeHistory.forEach(history => { %>
                <div class="history-item">
                    <h3>User ID: <%= history.userId %></h3>
                    <h3>User ID: <%= user.username %></h3>
                    <ul>
                        <% history.ingredients.forEach(ingredient => { %>
                            <li><%= ingredient.text %></li>
                        <% }) %>
                    </ul>
                </div>
            <% }) %>
        <% } else if (page === 'currency-conversion-history') { %>
            <h2>Currency Conversion History</h2>
            <% currencyHistory.forEach(history => { %>
                <div class="history-item">
                    <h3>User ID: <%= history.userId %></h3>
                    <h3>User ID: <%= user.username %></h3>
                    <p>Amount: <%= history.amount %></p>
                    <p>From Currency: <%= history.fromCurrency %></p>
                    <p>To Currency: <%= history.toCurrency %></p>
                    <p>Result: <%= history.result %></p>
                    <p>Created At: <%= history.createdAt %></p>
                </div>
            <% }) %>
        <% } %>
    </div>
    <footer style="display: flex; justify-content: center; align-items: center; width: 100%; height: 70px; background-color: rgb(104, 104, 104);">
        Aibek Bazarbayev SE-2205
    </footer>
</body>
</html>
